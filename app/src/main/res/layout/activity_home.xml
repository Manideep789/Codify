<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    android:orientation="vertical"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/tx1"
                android:text="Home"
                android:textStyle="bold"
                android:textColor="#1a283f">


            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Let's start coding with Codify"
                android:textColor="#A2A1A1">


            </TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cp"
                android:layout_marginRight="20dp"
                android:layout_height="155dp"
                app:cardBackgroundColor="@color/material_white">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_marginTop="40dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/c">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="120dp"
                    android:textColor="#1a283f"
                    android:textSize="15dp"
                    android:text="C Programming">

                </TextView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="155dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/java"
                app:cardBackgroundColor="@color/material_white">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/java">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="120dp"
                    android:textColor="#1a283f"
                    android:textSize="15dp"
                    android:text="Java Programming">

                </TextView>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_marginRight="20dp"
                android:id="@+id/py"
                app:cardCornerRadius="10dp"
                android:layout_height="155dp"
                app:cardBackgroundColor="@color/material_white">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_marginTop="40dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/python">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="120dp"
                    android:textColor="#1a283f"
                    android:textSize="15dp"
                    android:text="Python Programming">

                </TextView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="155dp"
                android:id="@+id/php"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/material_white">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_marginTop="40dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/php">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="120dp"
                    android:textColor="#1a283f"
                    android:textSize="15dp"
                    android:text="Php Programming">

                </TextView>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/js"
                android:layout_height="155dp"
                app:cardBackgroundColor="@color/material_white">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_marginTop="40dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/js">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="120dp"
                    android:textColor="#1a283f"
                    android:textSize="15dp"
                    android:text="JS Programming">

                </TextView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cpp"
                android:layout_height="155dp"
                app:cardBackgroundColor="@color/material_white">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_marginTop="40dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/cpp">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="120dp"
                    android:textColor="#1a283f"
                    android:textSize="15dp"
                    android:text="C++ Programming">

                </TextView>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/html"
            android:layout_height="155dp"
            app:cardBackgroundColor="@color/material_white">

            <ImageView
                android:layout_width="60dp"
                android:layout_marginTop="40dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/html">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp"
                android:textColor="#1a283f"
                android:textSize="15dp"
                android:text="Html">

            </TextView>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/css"
            android:layout_height="155dp"
            app:cardBackgroundColor="@color/material_white">

            <ImageView
                android:layout_width="60dp"
                android:layout_marginTop="40dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/css">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp"
                android:textColor="#1a283f"
                android:textSize="15dp"
                android:text="CSS">

            </TextView>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/swt"
                android:layout_height="155dp"
                app:cardBackgroundColor="@color/material_white">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_marginTop="40dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/swift">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="120dp"
                    android:textColor="#1a283f"
                    android:textSize="15dp"
                    android:text="Swift">

                </TextView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/kot"
                android:layout_height="155dp"
                app:cardBackgroundColor="@color/material_white">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_marginTop="40dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/kot">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="120dp"
                    android:textColor="#1a283f"
                    android:textSize="15dp"
                    android:text="Kotlin">

                </TextView>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:id="@+id/abttxt"
            android:layout_margin="25dp"
            android:textColor="#1a283f"
            android:layout_height="wrap_content"
            android:text="About us">

        </TextView>

    </LinearLayout>


</ScrollView>